    let hideText = "Ukryj skrypt dla tego zadania";
    let showScript = (scriptContent.match(/\n/g) || "").length + 1 < 50;
%>
<div class="mmj-script">
    <button id="scriptButton" class="btn btn-dark" data-show="<%= showText %>"
